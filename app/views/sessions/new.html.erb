<%= form_for(:session, url: sessions_path, :html =>  {:class => 'form-signin'} ) do |f| %>
  <h2 class='form-signin-heading'>Please sign in</h1>
  <div class="field">
    <%= f.label :email, 'メールアドレス', {class: 'sr-only'} %>
    <%= f.text_field :email ,placeholder: "Login ID", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :password, 'パスワード' , {class: 'sr-only'}  %>
    <%= f.password_field :password , placeholder: "Password", class:"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "ログイン", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

<% end %>
